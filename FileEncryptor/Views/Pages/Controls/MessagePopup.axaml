<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="FileEncryptor.Views.Pages.Controls.MessagePopup"
             Width="300"
             Height="150">
    <Border x:Name="MessageBoxBorder"
            CornerRadius="5"
            Padding="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
        <StackPanel Spacing="10">
            <TextBlock x:Name="MessageHeader" FontSize="16" FontWeight="Bold" TextAlignment="Center" />
            <TextBlock x:Name="MessageText" TextAlignment="Center" />
        </StackPanel>
    </Border>
</UserControl>